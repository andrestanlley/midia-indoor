generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @unique
  name     String  @unique
  password String
  active   Boolean
}

model Terminal {
  deviceId    String     @id @unique
  name        String
  lastSync    DateTime
  mediaListId String?
  mediaId     String?
  actualMedia String?
  MediaList   MediaList? @relation(fields: [mediaListId], references: [id])
  Media       Media?     @relation(fields: [mediaId], references: [id])
}

model MediaList {
  id       String     @id @unique
  name     String
  medias   Media[]
  Terminal Terminal[]
}

model Media {
  id          String     @id @unique
  name        String
  filename    String
  mediaListId String?
  expiresIn   DateTime
  MediaList   MediaList? @relation(fields: [mediaListId], references: [id])
  Terminal    Terminal[]
}
